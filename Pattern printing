n = int(input("Enter a number: "))
l = bool(int(input("Enter 1 or 0: ")))
if(l==True):
    for i in range(0,n):
        for j in range(0,i+1):
            print("*", end='')
        print("")

else:
    # for i in range(0,n):
    for i in range(n,0,-1):
        for j in range(1,i+1):
            print("*", end="")
   
