CODE 2:-

winning_number = 20
print("This is a number guessing game: ")

guess = 0
game_over = False

input_number = input("Enter a number between 1 and 100: ", end='')
while not game_over:
    if (winning_number == input_number):
        print("You guessed the correct number in", guess, "guesses")
        game_over = True
    else:
        if(winning_number>input_number):
            print("Guess too low!")
            guess+=1
            input_number= int(input("Guess the number again: ", end=''))
        elif(winning_number<input_number):
            print("Guess too high!")
            guess+=1
            input_number = int(input("Guess the number again: ", end=''))
